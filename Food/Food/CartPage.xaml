<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Food.CartPage"
             Title="Giỏ Hàng"
             >
    <ContentPage.Content>
        <StackLayout>
            <Label FontSize="Title" TextColor="Black" HorizontalOptions="Center" Text="Giỏ Hàng"/>
            <ListView x:Name="lstCart">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout>
                                <Label Text="{Binding _id}"/>
                                <Label Text="{Binding food.name}" />
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Label x:Name="txtSum" Text="Tổng tiển: 0" FontSize="Large" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>