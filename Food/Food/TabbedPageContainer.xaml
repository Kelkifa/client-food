<?xml version="1.0" encoding="utf-8" ?>

<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Food.TabbedPageContainer"
             xmlns:pages="clr-namespace:Food.TabbedPageFood"
            BarBackground="#fff688"
            UnselectedTabColor="Gray" SelectedTabColor="Black"
            >
    <NavigationPage.TitleView>
        <Label Text="Siêu Thị" HorizontalOptions="Center" TextColor="Black" FontSize="Large"/>
    </NavigationPage.TitleView>

    <TabbedPage.ToolbarItems>
        <ToolbarItem  x:Name="itemMenu_help" IconImageSource="iconCart2.png" Clicked="itemMenu_help_Clicked"/>
    </TabbedPage.ToolbarItems>
    <!--Pages can be added as references or inline-->

    <pages:TabbedDiscoveryPage Title="Khám phá" />
    
    <pages:SearchPage Title="Tìm kiếm" />
    <pages:NganhHangTabbedPage Title="Ngành hàng" />
    <pages:TaiKhoanTabbedPage Title="Tài khoản" />
</TabbedPage>